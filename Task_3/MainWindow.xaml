<Window x:Class="Task_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task_3"
        mc:Ignorable="d"
        DataContext = "{Binding ViewModelTick, Source = {StaticResource Tick}}"
        Title="Stopwatch" 
        Height="450" 
        Width="800">

    <Grid>
        <TextBlock 
         Name ="Stopwatch"
         Height="100"
         Width="550"
         FontSize="50"
         HorizontalAlignment="Center"
         VerticalAlignment="Center"
         Foreground="Black"
         Text= "{Binding TimeForTimer}"
         TextAlignment="Center"
         
        />
        <Button
         Name ="ButtonStart"
         Height="50"
         Width="150"
         HorizontalAlignment="Center"
         Margin="0, 185, 0, 0"
         Background="GreenYellow"
         BorderBrush="GreenYellow"
         Content = "Start"
         FontSize="30"
         Foreground="DarkGreen"
         Click ="ButtonStartClick"
        />
        <Button
         Name ="ButtonStop"
         Height="50"
         Width="150"
         HorizontalAlignment="Center"
         Margin="0, 185, 350, 0"
         Background="Pink"
         BorderBrush="RosyBrown"
         Content = "Stop"
         FontSize="30"
         Foreground="Red"
         Click ="ButtonStopClick"
        />
        <Button
         Name ="ButtonReset"
         Height="50"
         Width="150"
         HorizontalAlignment="Center"
         Margin="350, 185, 0, 0"
         Background="Lavender"
         BorderBrush="Lavender"
         Content = "Reset"
         FontSize="30"
         Foreground="BlueViolet"
         Click ="ButtonResetClick"
        />
    </Grid>
</Window>
